<div class="row">
    <div class="column medium-12">
        <p>This form allows you to see records in the Unified Listing that have been updated after one or more source records.</p>
    </div>
    <hr/>
</div>
<div class="row">
    <div class="column medium-3">
        {{>updates-controls}}
    </div>
    <div class="column medium-9">
        <div class="ul-updates-output">
            <p class="text-center">Use the form to the left to indicate which records you would like to display.</p>
        </div>
    </div>
</div>

<script src="/js/components/updates.js"></script>

<script type="text/javascript">
    {{>json-data}}

    var root = ul.config.root({
        serverConfig: ul.config.server,
        query:        ul.config.query,
        components: {
            updates: {
                type:      "ul.components.updates",
                container: "body"
            }
        }
    });
    root.updates.init();
</script>