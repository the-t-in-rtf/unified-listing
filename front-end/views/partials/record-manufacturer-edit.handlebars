<label for="manufacturer-name">Name</label>
<input type="text" class="manufacturer-name" id="manufacturer-name" value="{{name}}" placeholder="Enter the name of the manufacturer."/>

<label for="manufacturer-address">Address</label>
<input type="text" class="manufacturer-address" id="manufacturer-address" value="{{address}}"/>

<label for="manufacturer-citytown">City/Town</label>
<input type="text" class="manufacturer-citytown" id="manufacturer-citytown" value="{{cityTown}}"/>

<label for="manufacturer-provinceregion">Province/Region</label>
<input type="text" class="manufacturer-provinceregion" id="manufacturer-provinceregion" value="{{provinceRegion}}"/>

<label for="manufacturer-postalcode">Postal Code</label>
<input type="text" class="manufacturer-postalcode" id="manufacturer-postalcode" value="{{postalCode}}"/>

<label for="manufacturer-country">Country</label>
<input type="text" class="manufacturer-country" id="manufacturer-country" value="{{country}}"/>

<label for="manufacturer-email">Email</label>
<input type="text" class="manufacturer-email" id="manufacturer-email" value="{{email}}"/>

<label for="manufacturer-phone">Phone</label>
<input type="text" class="manufacturer-phone" id="manufacturer-phone" value="{{phone}}"/>

<label for="manufacturer-url">URL</label>
<input type="text" class="manufacturer-url" id="manufacturer-url" value="{{url}}"/>