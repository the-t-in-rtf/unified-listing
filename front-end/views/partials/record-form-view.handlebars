<div class="row">
    <div class="column medium-6 small-12">
      <h3>{{#if name}}{{name}}{{else}}No Product Name Listed{{/if}}</h3>
    </div>
    <div class="column medium-6 small-12">
      Status: {{status}}
    </div>
</div>


<div class="panel">
  <h3>Description</h3>

  {{{description}}}
</div>

<h3>Manufacturer</h3>

{{>record-manufacturer-view manufacturer}}

{{#if sources}}
    <h3>Sources</h3>

    {{>record-sources-view sources}}
{{/if}}


{{#equals source "unified"}}
{{else}}
  <p><a href="/record?source=unified&sid={{uid}}">View the unified record related to this product.</a></p>
{{/equals}}