<div class="row">
    <div class="column small-offset-4 small-4">
        <div class="login-success"></div>
        <div class="login-error"></div>
    </div>
</div>

<form class="login-form" method="POST">
    <div class="row">
        <div class="column small-offset-4 small-4">
                <p>Please enter your username and password to log in.</p>

                <label for="username">Username:</label>
                <input id="username" type="text" tabindex="1" name="username" placeholder="Enter your username...">

                <label for="password">Password:</label>
                <input id="password" type="password" tabindex="2" name="password">

                <input type="submit" tabindex="3" class="login-button" value="Log In">
        </div>
    </div>
    <div class="row">
        <div class="column small-offset-4 small-4">
            <hr/>

            <p>Forgot your password?  <a href="/api/user/forgot">Request a password reset.</a></p>

            <p>Don't have an account?  <a href="/api/user/signup">Sign up for an account.</a></p>
        </div>
    </div>
</form>

